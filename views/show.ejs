<% include partials/header %>

<div class="ui main text container segment">
    <h1><%= blog.title %></h1>
    <img class="ui centered large image" src="<%= blog.image %>">
    <h3><%= blog.created.toDateString() %></h3>
    <p><%- blog.body %></p>
    <a class="ui basic button secondary" href="/blogs/<%= blog.id %>/edit">Edit</a>
    <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
        <button class="ui negative button">Delete</button>
    </form>
    
</div>

<% include partials/footer %>